<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="147.5dp"
        android:id="@+id/relativeLayout1"
        android:background="@color/cardview_dark_background">
        <ImageView
            android:src="@mipmap/bck"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView1"
            />
        <TextView
            android:text="ManWinWin Automation Tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="25dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView1"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2"
        android:background="@color/cardview_dark_background">

        <GridLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:rowCount="2"
		android:columnCount="2"
		android:layout_gravity="center"
        android:layout_marginBottom="100dp">
			<Button
				android:text="MONTARE"
				android:layout_width="150dp"
				android:layout_height="110dp"
				android:layout_margin="20dp"
				android:id="@+id/buttonMontare"/>
			<Button
				android:text="DEMONTARE"
				android:layout_width="150dp"
				android:layout_height="110dp"
				android:layout_margin="20dp"
				android:id="@+id/buttonDemontare" />
			<Button
				android:text="INFO"
				android:layout_width="150dp"
				android:layout_height="110dp"
				android:layout_margin="20dp"
				android:id="@+id/buttonInfo"/>
			<Button
				android:text="IESIRE"
				android:layout_width="150dp"
				android:layout_height="110dp"
				android:layout_margin="20dp"
				android:id="@+id/buttonIesire" />
	</GridLayout>

    </LinearLayout>

	
</LinearLayout>